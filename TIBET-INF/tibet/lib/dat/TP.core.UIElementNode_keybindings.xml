<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<!DOCTYPE keyboard [
  <!ATTLIST key id ID #IMPLIED>
]>
<keybindings xmlns="http://www.technicalpursuit.com/1999/tibet"
  name="TP.core.UIElementNode">

  <!--
  Keybindings definition for the TP.core.UIElementNode type.

  This file maps key sequences, as defined using the TIBET standard keyname
  computation, to signal names. When the key sequence is pressed, a signal of
  that type is fired, with the currently focused element as its target.
  -->

  <!-- Focus the first field in the overall document -->
  <key id="DOM_Home_Down" signal="TP.sig.UIFocusFirst" />

  <!-- Focus the last field in the overall document -->
  <key id="DOM_End_Down" signal="TP.sig.UIFocusLast" />

  <!-- Focus the next field -->
  <key id="DOM_Tab_Down" signal="TP.sig.UIFocusNext" />

  <!-- Focus the previous field -->
  <key id="DOM_Shift_Tab_Down" signal="TP.sig.UIFocusPrevious" />

  <!-- Focus the following field (potentially traversing groups) -->
  <key id="DOM_Ctrl_Tab_Down" signal="TP.sig.UIFocusFollowing" />

  <!-- Focus the preceding field (potentially traversing groups) -->
  <key id="DOM_Ctrl_Shift_Tab_Down" signal="TP.sig.UIFocusPreceding" />

  <!-- Focus the first field in a group (in same group) -->
  <key id="DOM_PageUp_Down" signal="TP.sig.UIFocusFirstInGroup" />

  <!-- Focus the last field in a group (in same group) -->
  <key id="DOM_PageDown_Down" signal="TP.sig.UIFocusLastInGroup" />

  <!-- Focus the first field in the last group -->
  <key id="DOM_Ctrl_PageUp_Down" signal="TP.sig.UIFocusFirstInPreviousGroup" />

  <!-- Focus the first field in the next group -->
  <key id="DOM_Ctrl_PageDown_Down" signal="TP.sig.UIFocusFirstInNextGroup" />

</keybindings>
